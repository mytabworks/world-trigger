    "vuejs",
    "vanilla js",
    "javascript",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mytabworks/world-trigger.git"
  },
  "devDependencies": {
    "@4c/rollout": "^2.2.0",
