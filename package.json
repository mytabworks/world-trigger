    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.12.13",
    "@babel/register": "^7.12.13",
    "@babel/runtime": "^7.13.10",
    "@types/node": "^14.14.28",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "cherry-pick": "^0.5.0",
